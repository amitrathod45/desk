<h3>{{viewTitle}}</h3>

<form action="/desk" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{desk._id}}">
    <div class="form-group">
        <label>Desk Number</label>
        <input type="text" class="form-control" name="deskNumber" placeholder="Desk Number" value="{{desk.deskNumber}}">
        <div class="text-danger">
            {{desk.deskNumberError}}</div>
    </div>
    <div class="form-group">
        <label>Floor</label>
        <input type="text" class="form-control" name="floor" placeholder="Floor" value="{{desk.floor}}">
        <div class="text-danger">
            {{desk.floorError}}</div>
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address" value="{{desk.address}}">
        <div class="text-danger">
            {{desk.addressError}}</div>
    </div>
    <div class="form-group">
        <label>Office Location</label>
        <input type="text" class="form-control" name="officeLocation" placeholder="Office Location" value="{{desk.officeLocation}}">
        <div class="text-danger">
            {{desk.officeLocationError}}</div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/desk/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>